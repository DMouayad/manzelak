---
import type { AssetStoryblok } from 'component-types-sb';
import DivImage from './DivImage.astro';

interface Props {
    title: string;
    image: AssetStoryblok
}
const {title, image} = Astro.props;
---

<DivImage classList="banner-img" options={{
src:image.filename,
width: "1920",
height: "1080",
decoding: "async"
}}>
 <section class="page-title ">
      <div class="title-col d-flex flex-column align-items-center justify-content-center ">
        <div class="h1 section-title text-center ">{title}</div>
      </div>
    </section>
</DivImage>


<style>
  
.banner-img {
  background-size: cover;
  background-repeat: no-repeat;
  height: 270px;
  position: relative;

  @media (min-width:600px) {
    height: 50vh;
    max-height: 520px;
  }

  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: var(--dark-bg);
    opacity: .5;
  }
}
.page-title {
  position: relative;
  .title-col {
    height: 270px;

    @media (min-width:600px) {
      height: 50vh;
      max-height: 600px;
    }
  }

  .h1 {
    border-bottom: 3px solid;
    color: white;
    margin: 0;
    text-shadow: #091a10b9 0px 0px 10px;
    font-weight: 600;
    padding-bottom: 15px;
  }

  @media (max-width:400px) {
    padding: 10px;
  }

}

</style>